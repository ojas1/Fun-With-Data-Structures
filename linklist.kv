#: import ToggleButton kivy.uix.togglebutton.ToggleButton

<LLHeadWidget>:
    orientation: 'vertical'
    head_address: head_address
    pointsto: pointsto
    name: name

    canvas.before:
        Color: 
            rgb: .5, 0, .2
        Rectangle:
            size: 50, 50
            pos: self.x + self.width/2 - 25, self.y + self.height*.5 
    BoxLayout:
        size_hint_y: .3
    Label:
        size_hint_y: .1
        color: 0,0,0,1
        id: head_address
    Label:
        size_hint_y: .1
        id: pointsto
        text: 'null'
    Label:
        size_hint_y: .1
        color: 0,0,0,1
        id: name
        text: 'head'
    BoxLayout:
        size_hint_y: .4
    
<LLElementWidget>:
    val: val
    node_address: node_address
    nextptr: next
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: 0.3, 0.4, 0.6
        Rectangle:
            size: self.width*8/10, self.height*.05
            pos: self.x+self.width/10, self.y + self.height*.55
        Color:
            rgb: 0.2, 0.1, 0.4
        Rectangle:
            size: self.width*8/10, self.height*.05
            pos: self.x+self.width/10, self.y + self.height*.5
            

    canvas:
        Color: 
            rgb: .1, .8, .1
        Line: 
            width: 2
            points: self.x-self.width*.2, self.y+self.height*.525, self.x-self.width*.05, self.y+self.height*.525, self.x-self.width*.05, self.y+self.height*.55, self.x+self.width*.1, self.y + self.height*.55
        Line: 
            width: 2
            points: self.x+self.width*.1, self.y+self.height*.55, self.x+self.width*.1-5, self.y+self.height*.55+5
        Line: 
            width: 2
            points: self.x+self.width*.1, self.y+self.height*.55, self.x+self.width*.1-5, self.y+self.height*.55-5 
    BoxLayout:
        size_hint_y: .4

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: .1
        Label: 
            id: val
        Label: 
            id: next
        
    Label: 
        size_hint_y: .1
        id: node_address
        color: 0,0,0,1
    BoxLayout:
        size_hint_y: .4

<LLCreationWidget>:
    BoxLayout:
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data type'
        TextInput:
            id: data_type
            font_size: self.height/2
        Button: 
            text: 'enter' 
            on_press: self.parent.parent.create_ll(data_type)

<LLInsertionWidget>:

    BoxLayout:
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data'
        TextInput:
            id: data_in_ll
            font_size: self.height/2
        TextInput:
            id: data_in_ll_at_pos
            font_size: self.height/2
        Button: 
            text: 'insert front'
            on_press: self.parent.parent.insert_data_front(data_in_ll.text)
        Button: 
            text: 'insert end'
            on_press: self.parent.parent.insert_data_end(data_in_ll.text)
        Button: 
            text: 'insert at'
            on_press: self.parent.parent.insert_data_at(data_in_ll.text, data_in_ll_at_pos )
                    
<LLDeletionWidget>:

    BoxLayout:
        size_hint_x: .3
        ToggleButton:
            text: 'data'
            group: 'oprtn_type'
            state: 'down'

        ToggleButton:
            text: 'addr'
            group: 'oprtn_type'
                
    BoxLayout:
        size_hint_x: .7
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data / addr'
        TextInput:
            id: pos
            font_size: self.height/2
        Button: 
            id: delete
            text: 'enter'    
            on_press: self.parent.parent.delete_data(pos.text)
<LLReplacementWidget>:

    BoxLayout:
        size_hint_x: .2
        ToggleButton:
            text: 'data'
            group: 'oprtn_type'
            state: 'down'

        ToggleButton:
            text: 'addr'
            group: 'oprtn_type'
                
    BoxLayout:
        size_hint_x: .4
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data / addr'
        TextInput:
            font_size: self.height/2
        Button: 
            text: 'enter'    

    BoxLayout:
        size_hint_x: .4
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'replace with'
        TextInput:
            id: replace_pos
            font_size: self.height/2
        Button: 
            text: 'enter'
            on_press: self.parent.parent.replace_node(replace_pos.text)    
