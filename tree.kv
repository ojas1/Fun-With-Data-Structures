#: import ToggleButton kivy.uix.togglebutton.ToggleButton
<TreeElementWidget>:
    _parent: _parent
    data: data
    left_child: left_child
    right_child: right_child

    Label:
        id: _parent 
        canvas.before:
            Color: 
                rgb: .3, .4, .1
            Rectangle: 
                size: self.size
                pos: self.pos
        size_hint: .1, .05
        pos_hint: {'x':.45, 'y':.9}
        text: 'parent'
    Label:
        id: data
        canvas.before:                     
            Color: 
                rgb: .1, .1, .7
            Rectangle: 
                size: self.size
                pos: self.pos
        size_hint: .1, .05
        pos: _parent.pos[0], _parent.pos[1] - _parent.height

    Label:
        id: left_child
        canvas.before:
            Color:
                rgb: .1, .4, .6
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: .05, .05
        pos: _parent.pos[0], data.pos[1] - data.height
        text: 'left'

    Label:
        id: right_child
        canvas.before:
            Color:
                rgb: 1, 0, .1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: .05, .05
        pos: _parent.pos[0]+left_child.width, left_child.pos[1]
        text: 'right'

<TreeCreationWidget>:

    tree_size: _tree_size

    BoxLayout:
        size_hint_x: .5
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data type'
        TextInput:
            font_size: self.height/2
        Button: 
            text: 'enter'    

    BoxLayout:
        size_hint_x: .5
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'size'
        TextInput:
            id: _tree_size
            font_size: self.height/2
        Button: 
            text: 'enter' 
            on_press: self.parent.parent.create_tree(_tree_size.text)

<TreeInsertionWidget>:
    BoxLayout:
        size_hint_x: .3

    BoxLayout:
        size_hint_x: .4
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data'
        TextInput:
            font_size: self.height/2
        Button: 
            text: 'enter'    
    BoxLayout:
        size_hint_x: .3

<TreeDeletionWidget>:

    BoxLayout:
        size_hint_x: .3
        ToggleButton:
            text: 'data'
            group: 'oprtn_type'
            state: 'down'

        ToggleButton:
            text: 'addr'
            group: 'oprtn_type'
                
    BoxLayout:
        size_hint_x: .7
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data / addr'
        TextInput:
            font_size: self.height/2
        Button: 
            text: 'enter'    

<TreeReplacementWidget>:

    BoxLayout:
        size_hint_x: .2
        ToggleButton:
            text: 'data'
            group: 'oprtn_type'
            state: 'down'

        ToggleButton:
            text: 'addr'
            group: 'oprtn_type'
                
    BoxLayout:
        size_hint_x: .4
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'data / addr'
        TextInput:
            font_size: self.height/2
        Button: 
            text: 'enter'    

    BoxLayout:
        size_hint_x: .4
        Label:
            canvas.before:
                Color: 
                    rgb: 0.4, 0.5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            text: 'replace with'
        TextInput:
            font_size: self.height/2
        Button: 
            text: 'enter'    
